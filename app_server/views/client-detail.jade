extends layout

block content

 .container.col-lg-8
   h1= client.name

 .container.col-lg-8
    .row-lg-8
      .col-lg-8.col-md-6.col-xs-12
         ul.nav.nav-tabs
           li.active
             a(href='#header', role='tab', data-toggle='tab') Cabeçalho
           li
             a(href='#subscription', role='tab', data-toggle='tab') Subscrição
           li
             a(href='#reports', role='tab', data-toggle='tab') Relatórios
   
 .container.col-lg-8
    .row-lg-8
      .col-lg-8.col-md-6.col-xs-12
         .tab-content
           .tab-pane.active(id='header')
             .row-lg-12
               .col-lg-12
                 br
                 h4 NOME: #{client.name}
                 h4 NIF: #{client.clientvat}
                 h4 CAE: #{client.cae}
                 h4 SEDE: #{client.address}
                 h4 TELEFONE: #{client.telephone}
                 h4 E-MAIL: #{client.email}
           .tab-pane(id='subscription')
             .row-lg-12
               .col-lg-4
                 br
                 h4 TIPO: #{client.subscription}
         
           .tab-pane(id='reports')
             .row-lg-12
               .col-lg-6
                 table.table.table-striped.table-hover
                   thead
                     tr
                       th Relatório
                   tbody
                   -for (var i = 0; i < client.reports.length; i++){
                         tr
                            td 
                              a(href="/report/detail/#{client.reports[i]._id}")= client.reports[i].vat
                   -}        